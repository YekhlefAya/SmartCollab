@model SmartCollab.Models.User

<div class="py-2">
    <div class="px-4 py-3 border-b border-gray-100">
        <p class="text-sm font-medium text-gray-900">
            @($"{Model.FirstName} {Model.LastName}")
        </p>
        <p class="text-xs text-gray-500">
            @Model.Email
        </p>
    </div>
    
    <div class="py-2">
        <a asp-controller="Profile" asp-action="Index" class="flex items-center gap-3 px-4 py-2 text-sm text-gray-700 hover:bg-gray-50 transition">
            <i class="fas fa-user w-4 text-gray-400"></i>
            Mon profil
        </a>
    </div>
    
    <div class="border-t border-gray-100 py-2">
        <form asp-controller="Auth" asp-action="Logout" method="post" class="m-0">
            @Html.AntiForgeryToken()
            <button type="submit" class="w-full text-left flex items-center gap-3 px-4 py-2 text-sm text-red-600 hover:bg-red-50 transition">
                <i class="fas fa-sign-out-alt w-4"></i>
                DÃ©connexion
            </button>
        </form>
    </div>
</div>
