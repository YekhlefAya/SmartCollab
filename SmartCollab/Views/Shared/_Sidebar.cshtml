@using Microsoft.AspNetCore.Identity
@using SmartCollab.Models
@inject UserManager<User> UserManager
@inject IHttpContextAccessor HttpContextAccessor
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Identity


@{
    // Récupère l'utilisateur actuel
    var currentUser = await UserManager.GetUserAsync(HttpContextAccessor?.HttpContext?.User);
    var userFullName = currentUser != null ? $"{currentUser.FirstName} {currentUser.LastName}" : "Utilisateur";
    var userEmail = currentUser?.Email ?? "";

    // Chemin actuel pour gérer l'élément actif
    string currentPath = HttpContextAccessor?.HttpContext?.Request.Path.Value ?? "";

    // Fonction pour déterminer la classe CSS selon l'élément actif
    Func<string, string> isActive = (string path) =>
    {
        return currentPath.StartsWith(path, StringComparison.OrdinalIgnoreCase) 
            ? "bg-indigo-600 text-white" 
            : "text-slate-300 hover:bg-slate-800 hover:text-white";
    };
}

<aside class="w-64 bg-slate-900 text-white flex flex-col">
    <!-- Logo -->
    <div class="p-6 border-b border-slate-700">
        <div class="flex items-center gap-3">
            <div class="w-10 h-10 bg-gray-100 rounded-xl flex items-center justify-center">
                <img src="~/assets/logo.png" alt="SmartCollab Logo" class="text-indigo-600 text-2xl">
            </div>
            <span class="text-xl font-bold">SmartCollab</span>
        </div>
    </div>
    
    <!-- Navigation -->
    <nav class="flex-1 p-4 space-y-1">
        <a href="/Dashboard" class="flex items-center gap-3 px-4 py-3 rounded-xl @isActive("/Dashboard")">
            <i class="fas fa-chart-pie w-5"></i>
            <span>Tableau de bord</span>
        </a>
        
        <a href="/Projects" class="flex items-center gap-3 px-4 py-3 rounded-xl @isActive("/Projects")">
            <i class="fas fa-folder w-5"></i>
            <span>Projets</span>
        </a>
        
        <a href="/ProjectTasks" class="flex items-center gap-3 px-4 py-3 rounded-xl @isActive("/ProjectTasks")">
            <i class="fas fa-tasks w-5"></i>
            <span>Tâches</span>
        </a>
    </nav>
    
    <!-- Profil utilisateur -->
    <div class="p-4 border-t border-slate-700">
        <a href="/Profile" class="flex items-center gap-3 px-4 py-3 rounded-xl text-slate-300 hover:bg-slate-800 hover:text-white transition">
            <img src="@($"https://ui-avatars.com/api/?name={currentUser?.FirstName}+{currentUser?.LastName}&background=6366f1&color=fff")" alt="Avatar" class="w-8 h-8 rounded-full" />
            <div class="flex-1 min-w-0">
                <p class="text-sm font-medium truncate">@userFullName</p>
                <p class="text-xs text-slate-400 truncate">@userEmail</p>
            </div>
            <i class="fas fa-cog text-slate-400"></i>
        </a>
    </div>
</aside>
