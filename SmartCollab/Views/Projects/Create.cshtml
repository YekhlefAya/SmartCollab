@model SmartCollab.Models.Project

@{
    ViewData["Title"] = "Nouveau projet";
    ViewData["Breadcrumb"] = new List<(string, string)> { ("Accueil", "/"), ("Projets", "/Projects"), ("Nouveau", "") };
}
@{
    var colors = new Dictionary<string, string>
    {
        { "indigo", "bg-indigo-500 peer-checked:ring-indigo-200" },
        { "purple", "bg-purple-500 peer-checked:ring-purple-200" },
        { "green", "bg-green-500 peer-checked:ring-green-200" },
        { "orange", "bg-orange-500 peer-checked:ring-orange-200" },
        { "red", "bg-red-500 peer-checked:ring-red-200" },
        { "blue", "bg-blue-500 peer-checked:ring-blue-200" }
    };
}
<div class="max-w-3xl mx-auto">
    <div class="bg-white rounded-2xl shadow-sm p-8">
        <h2 class="text-xl font-bold text-gray-800 mb-6">Créer un nouveau projet</h2>
        
        <form method="post" asp-action="Create" asp-controller="Projects">
            <div class="space-y-6">
                <div>
                    <label asp-for="Name" class="block text-sm font-medium text-gray-700 mb-2"></label>
                    <input asp-for="Name" class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition" placeholder="Ex: Refonte Site Web">
                    <span asp-validation-for="Name" class="text-red-500 text-sm"></span>
                </div>

                <div>
                    <label asp-for="Description" class="block text-sm font-medium text-gray-700 mb-2"></label>
                    <textarea asp-for="Description" rows="4" class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition resize-none" placeholder="Décrivez les objectifs et le périmètre du projet..."></textarea>
                    <span asp-validation-for="Description" class="text-red-500 text-sm"></span>
                </div>

                <div class="grid md:grid-cols-2 gap-6">
                    <div>
                        <label asp-for="StartDate" class="block text-sm font-medium text-gray-700 mb-2"></label>
                        <input asp-for="StartDate" type="date" class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition">
                        <span asp-validation-for="StartDate" class="text-red-500 text-sm"></span>
                    </div>
                    <div>
                        <label asp-for="EndDate" class="block text-sm font-medium text-gray-700 mb-2">Date de fin prévue</label>
                        <input asp-for="EndDate" type="date" class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition">
                        <span asp-validation-for="EndDate" class="text-red-500 text-sm"></span>
                    </div>
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Couleur du projet</label>
                    <div class="flex space-x-3">
                        @foreach (var kvp in colors)
                        {
                            <label class="cursor-pointer relative">
                                <input type="radio" asp-for="Color" value="@kvp.Key" class="sr-only peer" checked />
                                <div class="@kvp.Value w-10 h-10 rounded-xl transition-transform transform peer-checked:scale-110 peer-checked:ring-4 peer-checked:ring-offset-2 peer-checked:ring-offset-white"></div>
                            </label>
                        }
                    </div>


                </div>

                <div class="flex justify-end space-x-4 pt-4 border-t">
                    <a href="/Projects" class="px-6 py-3 border border-gray-300 text-gray-700 rounded-xl hover:bg-gray-50 transition font-medium">
                        Annuler
                    </a>
                    <button type="submit" class="px-6 py-3 bg-indigo-600 text-white rounded-xl hover:bg-indigo-700 transition font-medium">
                        <i class="fas fa-plus mr-2"></i>Créer le projet
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
