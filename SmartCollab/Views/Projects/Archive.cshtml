@model List<ArchivedProjectViewModel>

<div class="space-y-6">
    <div class="flex items-center justify-between">
        <h1 class="text-2xl font-bold text-gray-800">Projets archivés</h1>
        <a href="/Projects" class="px-4 py-2 border border-gray-300 text-gray-700 rounded-xl hover:bg-gray-50 transition font-medium">
            <i class="fas fa-arrow-left mr-2"></i>Retour aux projets
        </a>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="flex flex-col items-center justify-center py-20 text-gray-400">
            <i class="fas fa-archive text-4xl mb-4"></i>
            <p class="text-lg">Aucun projet archivé pour le moment.</p>
        </div>
    }
    else
    {
        <div class="space-y-4">
            @foreach (var project in Model)
            {
                <div class="bg-white rounded-2xl shadow-sm p-6 opacity-75 hover:opacity-100 transition">
                    <div class="flex items-start justify-between">
                        <div class="flex items-start space-x-4">
                            <div class="w-12 h-12 bg-gray-200 rounded-xl flex items-center justify-center">
                                <i class="fas fa-folder text-gray-500 text-xl"></i>
                            </div>
                            <div>
                                <div class="flex items-center space-x-3">
                                    <h3 class="font-bold text-gray-800">@project.Name</h3>
                                    <span class="px-2 py-1 bg-gray-100 text-gray-600 text-xs rounded-full">Archivé</span>
                                </div>
                                <p class="text-gray-600 text-sm mt-1">@project.Description</p>
                                <div class="flex items-center space-x-4 mt-3 text-sm text-gray-500">
                                    <span><i class="fas fa-tasks mr-1"></i>@project.CompletedTasksCount tâches terminées</span>
                                    <span><i class="fas fa-calendar mr-1"></i>Archivé le @project.ArchivedAt.ToString("dd MMM yyyy")</span>
                                </div>
                            </div>
                        </div>
                        <div class="flex space-x-2">
                            <form asp-action="Restore" method="post">
                                <input type="hidden" name="id" value="@project.Id" />
                                <button type="submit" class="px-3 py-2 text-indigo-600 hover:bg-indigo-50 rounded-xl transition text-sm font-medium">
                                    <i class="fas fa-undo mr-1"></i>Restaurer
                                </button>
                            </form>
                            <form asp-action="Delete" method="post">
                                <input type="hidden" name="id" value="@project.Id" />
                                <button type="submit" class="px-3 py-2 text-red-600 hover:bg-red-50 rounded-xl transition text-sm font-medium">
                                    <i class="fas fa-trash mr-1"></i>Supprimer
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
