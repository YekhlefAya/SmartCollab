@{
    ViewData["Title"] = "Exporter";
    ViewData["Breadcrumb"] = new List<(string, string)> { ("Accueil", "/"), ("Exporter", "") };
}

<div class="max-w-3xl mx-auto">
    <div class="bg-white rounded-2xl shadow-sm p-8">
        <div class="text-center mb-8">
            <div class="inline-flex items-center justify-center w-16 h-16 bg-indigo-100 rounded-full mb-4">
                <i class="fas fa-file-export text-indigo-600 text-2xl"></i>
            </div>
            <h2 class="text-xl font-bold text-gray-800">Exporter vos données</h2>
            <p class="text-gray-600 mt-2">Téléchargez vos projets et tâches dans différents formats</p>
        </div>
        
        <form method="post" asp-action="Export" asp-controller="Export">
            <div class="space-y-6">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-3">Type de données à exporter</label>
                    <div class="grid md:grid-cols-2 gap-4">
                        <label class="cursor-pointer">
                            <input type="radio" name="dataType" value="projects" class="sr-only peer" checked>
                            <div class="p-4 border-2 border-gray-200 rounded-xl peer-checked:border-indigo-500 peer-checked:bg-indigo-50 hover:bg-gray-50 transition">
                                <div class="flex items-center space-x-3">
                                    <i class="fas fa-folder text-2xl text-indigo-500"></i>
                                    <div>
                                        <p class="font-medium text-gray-800">Projets</p>
                                        <p class="text-sm text-gray-500">Tous vos projets et leurs détails</p>
                                    </div>
                                </div>
                            </div>
                        </label>
                        <label class="cursor-pointer">
                            <input type="radio" name="dataType" value="tasks" class="sr-only peer">
                            <div class="p-4 border-2 border-gray-200 rounded-xl peer-checked:border-indigo-500 peer-checked:bg-indigo-50 hover:bg-gray-50 transition">
                                <div class="flex items-center space-x-3">
                                    <i class="fas fa-tasks text-2xl text-green-500"></i>
                                    <div>
                                        <p class="font-medium text-gray-800">Tâches</p>
                                        <p class="text-sm text-gray-500">Toutes vos tâches avec leur statut</p>
                                    </div>
                                </div>
                            </div>
                        </label>
                        <label class="cursor-pointer">
                            <input type="radio" name="dataType" value="reports" class="sr-only peer">
                            <div class="p-4 border-2 border-gray-200 rounded-xl peer-checked:border-indigo-500 peer-checked:bg-indigo-50 hover:bg-gray-50 transition">
                                <div class="flex items-center space-x-3">
                                    <i class="fas fa-chart-bar text-2xl text-purple-500"></i>
                                    <div>
                                        <p class="font-medium text-gray-800">Rapports</p>
                                        <p class="text-sm text-gray-500">Statistiques et analyses</p>
                                    </div>
                                </div>
                            </div>
                        </label>
                        <label class="cursor-pointer">
                            <input type="radio" name="dataType" value="all" class="sr-only peer">
                            <div class="p-4 border-2 border-gray-200 rounded-xl peer-checked:border-indigo-500 peer-checked:bg-indigo-50 hover:bg-gray-50 transition">
                                <div class="flex items-center space-x-3">
                                    <i class="fas fa-database text-2xl text-orange-500"></i>
                                    <div>
                                        <p class="font-medium text-gray-800">Tout exporter</p>
                                        <p class="text-sm text-gray-500">Export complet de toutes les données</p>
                                    </div>
                                </div>
                            </div>
                        </label>
                    </div>
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-3">Format de fichier</label>
                    <div class="grid grid-cols-3 gap-4">
                        <label class="cursor-pointer">
                            <input type="radio" name="format" value="excel" class="sr-only peer" checked>
                            <div class="p-4 border-2 border-gray-200 rounded-xl peer-checked:border-indigo-500 peer-checked:bg-indigo-50 hover:bg-gray-50 transition text-center">
                                <i class="fas fa-file-excel text-3xl text-green-600 mb-2"></i>
                                <p class="font-medium text-gray-800">Excel</p>
                                <p class="text-xs text-gray-500">.xlsx</p>
                            </div>
                        </label>
                        <label class="cursor-pointer">
                            <input type="radio" name="format" value="csv" class="sr-only peer">
                            <div class="p-4 border-2 border-gray-200 rounded-xl peer-checked:border-indigo-500 peer-checked:bg-indigo-50 hover:bg-gray-50 transition text-center">
                                <i class="fas fa-file-csv text-3xl text-blue-600 mb-2"></i>
                                <p class="font-medium text-gray-800">CSV</p>
                                <p class="text-xs text-gray-500">.csv</p>
                            </div>
                        </label>
                        <label class="cursor-pointer">
                            <input type="radio" name="format" value="pdf" class="sr-only peer">
                            <div class="p-4 border-2 border-gray-200 rounded-xl peer-checked:border-indigo-500 peer-checked:bg-indigo-50 hover:bg-gray-50 transition text-center">
                                <i class="fas fa-file-pdf text-3xl text-red-600 mb-2"></i>
                                <p class="font-medium text-gray-800">PDF</p>
                                <p class="text-xs text-gray-500">.pdf</p>
                            </div>
                        </label>
                    </div>
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-3">Filtres (optionnel)</label>
                    <div class="grid md:grid-cols-2 gap-4">
                        <div>
                            <label for="project" class="block text-sm text-gray-600 mb-1">Projet spécifique</label>
                            <select id="project" name="project"
                                class="w-full px-4 py-2 border border-gray-300 rounded-xl focus:ring-2 focus:ring-indigo-500">
                                <option value="">Tous les projets</option>
                                <option>Refonte Site Web</option>
                                <option>Application Mobile</option>
                                <option>API Backend</option>
                            </select>
                        </div>
                        <div>
                            <label for="dateRange" class="block text-sm text-gray-600 mb-1">Période</label>
                            <select id="dateRange" name="dateRange"
                                class="w-full px-4 py-2 border border-gray-300 rounded-xl focus:ring-2 focus:ring-indigo-500">
                                <option value="">Toutes les dates</option>
                                <option>7 derniers jours</option>
                                <option>30 derniers jours</option>
                                <option>Ce mois</option>
                                <option>Cette année</option>
                            </select>
                        </div>
                    </div>
                </div>

                <div class="bg-blue-50 rounded-xl p-4">
                    <div class="flex">
                        <i class="fas fa-info-circle text-blue-500 mt-0.5 mr-3"></i>
                        <div class="text-sm text-blue-700">
                            <p class="font-medium">À propos de l'export</p>
                            <p class="mt-1">L'export peut prendre quelques minutes selon la quantité de données. Vous recevrez un e-mail avec le lien de téléchargement une fois prêt.</p>
                        </div>
                    </div>
                </div>

                <button type="submit" class="w-full bg-indigo-600 text-white py-3 px-4 rounded-xl font-semibold hover:bg-indigo-700 focus:ring-4 focus:ring-indigo-200 transition">
                    <i class="fas fa-download mr-2"></i>Générer l'export
                </button>
            </div>
        </form>
    </div>
</div>
