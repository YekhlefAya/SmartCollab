@{
    ViewData["Title"] = "Fichiers";
    ViewData["Breadcrumb"] = new List<(string, string)> { ("Accueil", "/"), ("Fichiers", "") };
}

<div class="space-y-6">
    <div class="flex items-center justify-between">
        <div>
            <h1 class="text-2xl font-bold text-gray-800">Mes Fichiers</h1>
            <p class="text-gray-600">Gérez tous vos documents et fichiers</p>
        </div>
        <button class="px-4 py-2 bg-indigo-600 text-white rounded-xl hover:bg-indigo-700 transition font-medium">
            <i class="fas fa-upload mr-2"></i>Téléverser
        </button>
    </div>

    <div class="bg-white rounded-2xl shadow-sm p-4">
        <div class="flex flex-wrap items-center gap-4">
            
            <select class="px-4 py-2 border border-gray-300 rounded-xl focus:ring-2 focus:ring-indigo-500">
                <option>Tous les projets</option>
                <option>Refonte Site Web</option>
                <option>Application Mobile</option>
            </select>
            <select class="px-4 py-2 border border-gray-300 rounded-xl focus:ring-2 focus:ring-indigo-500">
                <option>Tous les types</option>
                <option>Images</option>
                <option>Documents</option>
                <option>Vidéos</option>
            </select>
            
        </div>
    </div>

    <div class="bg-white rounded-2xl shadow-sm p-6">
        <h3 class="font-semibold text-gray-800 mb-4">Récemment ajoutés</h3>
        <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-4">
            <div class="group relative">
                <div class="aspect-square bg-gray-100 rounded-xl flex items-center justify-center group-hover:bg-gray-200 transition cursor-pointer">
                    <i class="fas fa-file-image text-4xl text-purple-500"></i>
                </div>
                <div class="absolute top-2 right-2 opacity-0 group-hover:opacity-100 transition">
                    <button class="w-8 h-8 bg-white rounded-full shadow flex items-center justify-center text-gray-600 hover:text-indigo-600">
                        <i class="fas fa-ellipsis-v"></i>
                    </button>
                </div>
                <p class="mt-2 text-sm font-medium text-gray-700 truncate">dashboard-v2.fig</p>
                <p class="text-xs text-gray-500">2.4 MB • Il y a 2h</p>
            </div>
            <div class="group relative">
                <div class="aspect-square bg-gray-100 rounded-xl flex items-center justify-center group-hover:bg-gray-200 transition cursor-pointer">
                    <i class="fas fa-file-pdf text-4xl text-red-500"></i>
                </div>
                <div class="absolute top-2 right-2 opacity-0 group-hover:opacity-100 transition">
                    <button class="w-8 h-8 bg-white rounded-full shadow flex items-center justify-center text-gray-600 hover:text-indigo-600">
                        <i class="fas fa-ellipsis-v"></i>
                    </button>
                </div>
                <p class="mt-2 text-sm font-medium text-gray-700 truncate">specs-tech.pdf</p>
                <p class="text-xs text-gray-500">1.2 MB • Il y a 5h</p>
            </div>
            <div class="group relative">
                <div class="aspect-square bg-gray-100 rounded-xl flex items-center justify-center group-hover:bg-gray-200 transition cursor-pointer">
                    <i class="fas fa-file-excel text-4xl text-green-500"></i>
                </div>
                <div class="absolute top-2 right-2 opacity-0 group-hover:opacity-100 transition">
                    <button class="w-8 h-8 bg-white rounded-full shadow flex items-center justify-center text-gray-600 hover:text-indigo-600">
                        <i class="fas fa-ellipsis-v"></i>
                    </button>
                </div>
                <p class="mt-2 text-sm font-medium text-gray-700 truncate">planning.xlsx</p>
                <p class="text-xs text-gray-500">156 KB • Hier</p>
            </div>
            <div class="group relative">
                <div class="aspect-square bg-gray-100 rounded-xl flex items-center justify-center group-hover:bg-gray-200 transition cursor-pointer">
                    <i class="fas fa-file-word text-4xl text-blue-500"></i>
                </div>
                <div class="absolute top-2 right-2 opacity-0 group-hover:opacity-100 transition">
                    <button class="w-8 h-8 bg-white rounded-full shadow flex items-center justify-center text-gray-600 hover:text-indigo-600">
                        <i class="fas fa-ellipsis-v"></i>
                    </button>
                </div>
                <p class="mt-2 text-sm font-medium text-gray-700 truncate">brief-client.docx</p>
                <p class="text-xs text-gray-500">89 KB • Hier</p>
            </div>
            <div class="group relative">
                <div class="aspect-square bg-gray-100 rounded-xl overflow-hidden group-hover:bg-gray-200 transition cursor-pointer">
                    <img src="https://picsum.photos/200" alt="" class="w-full h-full object-cover">
                </div>
                <div class="absolute top-2 right-2 opacity-0 group-hover:opacity-100 transition">
                    <button class="w-8 h-8 bg-white rounded-full shadow flex items-center justify-center text-gray-600 hover:text-indigo-600">
                        <i class="fas fa-ellipsis-v"></i>
                    </button>
                </div>
                <p class="mt-2 text-sm font-medium text-gray-700 truncate">hero-image.jpg</p>
                <p class="text-xs text-gray-500">450 KB • 2 jours</p>
            </div>
            <div class="group relative">
                <div class="aspect-square bg-gray-100 rounded-xl flex items-center justify-center group-hover:bg-gray-200 transition cursor-pointer">
                    <i class="fas fa-file-archive text-4xl text-yellow-500"></i>
                </div>
                <div class="absolute top-2 right-2 opacity-0 group-hover:opacity-100 transition">
                    <button class="w-8 h-8 bg-white rounded-full shadow flex items-center justify-center text-gray-600 hover:text-indigo-600">
                        <i class="fas fa-ellipsis-v"></i>
                    </button>
                </div>
                <p class="mt-2 text-sm font-medium text-gray-700 truncate">assets.zip</p>
                <p class="text-xs text-gray-500">12.5 MB • 3 jours</p>
            </div>
        </div>
    </div>

    
</div>
