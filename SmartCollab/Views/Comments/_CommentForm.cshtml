@model dynamic

<div class="flex space-x-3">
    <img src="https://ui-avatars.com/api/?name=Jean+Dupont&size=40&background=6366f1&color=fff" class="w-10 h-10 rounded-full">
    <div class="flex-1">
        <form method="post" asp-action="Create" asp-controller="Comments">
            <input type="hidden" name="taskId" value="@ViewData["TaskId"]" />
            <textarea name="content" rows="2"
                class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition resize-none"
                placeholder="Ajouter un commentaire... Utilisez @@ pour mentionner quelqu'un"></textarea>
            <div class="flex items-center justify-between mt-2">
                <div class="flex space-x-2">
                    <button type="button" class="p-2 text-gray-400 hover:text-gray-600 rounded-lg hover:bg-gray-100">
                        <i class="fas fa-paperclip"></i>
                    </button>
                    <button type="button" class="p-2 text-gray-400 hover:text-gray-600 rounded-lg hover:bg-gray-100">
                        <i class="far fa-smile"></i>
                    </button>
                </div>
                <button type="submit" class="px-4 py-2 bg-indigo-600 text-white rounded-xl hover:bg-indigo-700 transition text-sm font-medium">
                    <i class="fas fa-paper-plane mr-1"></i>Envoyer
                </button>
            </div>
        </form>
    </div>
</div>
